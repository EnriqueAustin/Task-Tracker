{
  "author": "",
  "name": "timetracker",
  "version": "1.0.0",
  "description": "A simple work tracking application built with Electron.",
  "main": "main.js",
  "scripts": {
    "vue-serve": "vue-cli-service serve",
    "electron-start": "electron .",
    "start": "npm run electron-start",
    "start-dev": "concurrently \"cd vueapp && npm run serve\" \"npm run electron-start\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.2.3",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.maxuim.timetracker",
    "productName": "TimeTracker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.ts",
      "!*.code-workspace",
      "!LICENSE.md",
      "!package-lock.json",
      "!src/",
      "!tsconfig.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/TT1.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/TT2.png"
    }
  },
  "dependencies": {
    "vue": "^3.4.19"
  }
}
